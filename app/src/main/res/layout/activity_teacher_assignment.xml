<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.komodo_hub.TeacherAssignmentActivity">

    <!-- LinearLayout container for the activity UI -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Assignment Title -->
        <EditText
            android:id="@+id/et_assignment_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Assignment Title" />

        <!-- Assignment Description -->
        <EditText
            android:id="@+id/et_assignment_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Assignment Description"
            android:minLines="3"
            android:inputType="textMultiLine" />

        <!-- Post Assignment Button -->
        <Button
            android:id="@+id/btn_post_assignment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Post Assignment"
            android:layout_gravity="center_horizontal"
            android:paddingTop="16dp" />

        <!-- ListView for displaying assignments -->
        <ListView
            android:id="@+id/listAssignments"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
