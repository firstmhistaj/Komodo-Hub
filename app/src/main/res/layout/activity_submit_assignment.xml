<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/schoolback14"
    tools:context="com.example.komodo_hub.SubmitAssignmentActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/textViewSubmitassign"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Submit Assignment"
            android:textColor="@color/colorWhite"
            android:textSize="24sp"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/editTextAssignmentDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter assignment details"
            android:padding="16dp"
            android:textColorHint="@color/colorWhite"
            android:layout_marginTop="16dp"/>

        <Button
            android:id="@+id/buttonUpload"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Upload File"
            android:backgroundTint="@color/colorBlack"
            android:textColor="@color/colorWhite"
            android:layout_marginTop="16dp"/>

        <Button
            android:id="@+id/buttonSubmit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Submit Assignment"
            android:backgroundTint="@color/colorBlack"
            android:textColor="@color/colorWhite"
            android:layout_marginTop="16dp"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
